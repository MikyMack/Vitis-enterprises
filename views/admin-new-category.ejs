    <script>
        // Handle image file preview
        document.getElementById('categoryImages').addEventListener('change', function(event) {
            const files = event.target.files;
            const previewContainer = document.getElementById('image-preview-container');
            previewContainer.innerHTML = ''; 
            
            if (files.length > 0) {
                Array.from(files).forEach(file => {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        const imgElement = document.createElement('img');
                        imgElement.src = e.target.result;
                        imgElement.style.width = '100px';
                        imgElement.style.height = '100px';
                        imgElement.style.marginRight = '10px';
                        imgElement.style.marginBottom = '10px';
                        previewContainer.appendChild(imgElement);
                    };
                    reader.readAsDataURL(file);
                });
            }
        });
    
        // Add new subcategory fields (Optional)
        document.getElementById('add-subcategory').addEventListener('click', function() {
            const container = document.querySelector('.subcategory-container');
            const index = container.querySelectorAll('.subcategory-input').length / 2; // For title and description fields
    
            // Create new subcategory input fields
            const newTitleField = document.createElement('input');
            newTitleField.classList.add('flex-grow', 'subcategory-input', 'mb-10'); 
            newTitleField.type = 'text';
            newTitleField.placeholder = 'Enter sub-category name';
            newTitleField.name = `subCategory[${index}].title`;
    
            const newDescriptionField = document.createElement('textarea');
            newDescriptionField.classList.add('flex-grow', 'subcategory-input'); // No margin class needed for textarea
            newDescriptionField.placeholder = 'Enter sub-category description';
            newDescriptionField.name = `subCategory[${index}].description`;
    
            container.appendChild(newTitleField);
            container.appendChild(newDescriptionField);
        });
    </script>
