                                                ₹<%= product.baseOfferPrice.toFixed(2) %>
                                            <% } else { %>
                                                ₹<%= product.basePrice ? product.basePrice.toFixed(2) : '0.00' %>
                                            <% } %>
                                        </span>
                                        <% if (product.baseOfferPrice && product.baseOfferPrice > 0) { %>
                                            <del>₹<%= product.basePrice ? product.basePrice.toFixed(2) : '0.00' %></del>
                                        <% } %>
                                    </div>
                                    <div class="modal-product-meta ltn__product-details-menu-1">
                                        <ul>
                                            <li>
                                                <strong>Category:</strong>
                                                <span>
                                                    <a href="#"><%= product.category %></a>
                                                </span>
                                            </li>
                                        </ul>
                                    </div>
                                    <% if ((product.colorVariants && product.colorVariants.length > 0) || (product.measurements && product.measurements.length > 0)) { %>
                                        <div class="mb-2 d-flex align-items-center flex-wrap" style="gap: 18px;">
                                            <% if (product.colorVariants && product.colorVariants.length > 0) { %>
                                                <div class="d-flex align-items-center" style="gap: 6px;">
                                                    <label for="color-variant-select" class="mb-0"><strong>Color:</strong></label>
                                                    <select id="color-variant-select" class="form-select" 
                                                        data-type="color" 
                                                        style="width: 100%; display:inline-block;"
                                                        onchange="window._lastVariantChanged='color';updatePriceOnSelect('<%= product._id %>')">
                                                        <option value="">Select Color</option>
                                                        <% product.colorVariants.forEach(function(variant, idx) { %>
                                                            <option value="<%= idx %>" 
                                                                data-price="<%= variant.price || product.basePrice %>"
                                                                data-offer="<%= variant.offerPrice || product.baseOfferPrice %>">
                                                                <%= variant.colorName %>
                                                            </option>
                                                        <% }) %>
                                                    </select>
                                                </div>
                                            <% } %>
                                            <% if (product.measurements && product.measurements.length > 0) { %>
                                                <div class="d-flex align-items-center" style="gap: 6px;">
                                                    <label for="measurement-variant-select" class="mb-0"><strong>Measurement:</strong></label>
                                                    <select id="measurement-variant-select" class="form-select" 
                                                        data-type="measurement"
                                                        style="width:auto;display:inline-block;"
                                                        onchange="window._lastVariantChanged='measurement';updatePriceOnSelect('<%= product._id %>')">
                                                        <option value="">Select One</option>
                                                        <% product.measurements.forEach(function(measure, idx) { %>
                                                            <option value="<%= idx %>"
                                                                data-price="<%= measure.price || product.basePrice %>"
                                                                data-offer="<%= measure.offerPrice || product.baseOfferPrice %>">
                                                                <%= measure.measurement %>
                                                            </option>
                                                        <% }) %>
                                                    </select>
                                                </div>
                                            <% } %>
                                        </div>
                                    <% } %>
