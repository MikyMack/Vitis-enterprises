                <script>
                    const product = <%- JSON.stringify(product) %>;
                    var basePrices = {
                        '<%= product._id %>': {
                            base: <%= product.basePrice || 0 %>,
                            offer: <%= product.baseOfferPrice || 0 %>
                        }
                    };
                    
                    function updatePriceOnSelect(productId) {
                        var colorSelect = document.getElementById('color-variant-select');
                        var measurementSelect = document.getElementById('measurement-variant-select');
                        var base = basePrices[productId] ? basePrices[productId].base : 0;
                        var offer = basePrices[productId] ? basePrices[productId].offer : 0;
                    
                        // Track which select was changed last
                        if (!window._lastVariantChanged) window._lastVariantChanged = 'color';
                    
                        // If both selects exist, use the last changed select's price, but allow switching
                        if (colorSelect && measurementSelect) {
                            if (window._lastVariantChanged === 'color' && colorSelect.value !== "") {
                                var selected = colorSelect.options[colorSelect.selectedIndex];
                                if (selected) {
                                    var variantPrice = parseFloat(selected.getAttribute('data-price'));
                                    var variantOffer = parseFloat(selected.getAttribute('data-offer'));
                                    if (!isNaN(variantPrice)) base = variantPrice;
                                    if (!isNaN(variantOffer)) offer = variantOffer;
                                }
                            } else if (window._lastVariantChanged === 'measurement' && measurementSelect.value !== "") {
                                var selected = measurementSelect.options[measurementSelect.selectedIndex];
                                if (selected) {
                                    var variantPrice = parseFloat(selected.getAttribute('data-price'));
                                    var variantOffer = parseFloat(selected.getAttribute('data-offer'));
                                    if (!isNaN(variantPrice)) base = variantPrice;
                                    if (!isNaN(variantOffer)) offer = variantOffer;
                                }
                            }
                        } else if (colorSelect && colorSelect.value !== "") {
                            var selected = colorSelect.options[colorSelect.selectedIndex];
                            if (selected) {
                                var variantPrice = parseFloat(selected.getAttribute('data-price'));
                                var variantOffer = parseFloat(selected.getAttribute('data-offer'));
                                if (!isNaN(variantPrice)) base = variantPrice;
                                if (!isNaN(variantOffer)) offer = variantOffer;
                            }
                        } else if (measurementSelect && measurementSelect.value !== "") {
                            var selected = measurementSelect.options[measurementSelect.selectedIndex];
                            if (selected) {
                                var variantPrice = parseFloat(selected.getAttribute('data-price'));
                                var variantOffer = parseFloat(selected.getAttribute('data-offer'));
                                if (!isNaN(variantPrice)) base = variantPrice;
                                if (!isNaN(variantOffer)) offer = variantOffer;
                            }
                        }
                    
                        var displayPrice = (offer > 0 && offer < base) ? offer : base;
                        var priceEl = document.getElementById('product-price-block');
                        if (priceEl) {
                            priceEl.innerHTML =
                                '<span id="main-price">₹' + displayPrice.toFixed(2) + '</span>' +
                                ((offer > 0 && offer < base) ? ('<del>₹' + base.toFixed(2) + '</del>') : '');
                        }
                    }
                    
                    // --- Cart functionality ---
                    const cart = {
                        async addItem(productId, colorIndex = null, measurementIndex = null, quantity = 1) {
                            try {
                                const addToCartBtn = document.getElementById('add-to-cart-btn');
                                const feedbackEl = document.getElementById('cart-feedback');
                                const colorSelect = document.getElementById('color-variant-select');
                                const measurementSelect = document.getElementById('measurement-variant-select');
                                
                                // Check for required variant selection
                                if (colorSelect && colorSelect.options.length > 1 && (!colorIndex || colorIndex === "")) {
                                    this.showError('Please select a color variant.', feedbackEl);
                                    return false;
                                }
                                if (measurementSelect && measurementSelect.options.length > 1 && (!measurementIndex || measurementIndex === "")) {
                                    this.showError('Please select a measurement variant.', feedbackEl);
                                    return false;
                                }
                    
                                if (addToCartBtn) {
                                    addToCartBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Adding...';
                                    addToCartBtn.disabled = true;
                                }
                    
                                if (feedbackEl) {
                                    feedbackEl.style.display = "none";
                                    feedbackEl.textContent = "";
                                }
                    
                                // Determine price to send to cart
                                let priceToSend = basePrices[productId].base;
                                let offerToSend = basePrices[productId].offer;
                                let selectedColor = null;
                                let selectedMeasurement = null;
                    
                                if (colorSelect && colorIndex !== null && colorIndex !== "") {
                                    selectedColor = (product.colorVariants && product.colorVariants[parseInt(colorIndex)]) || null;
                                    if (selectedColor) {
                                        priceToSend = selectedColor.price || priceToSend;
                                        offerToSend = selectedColor.offerPrice || offerToSend;
                                    }
                                }
                                if (measurementSelect && measurementIndex !== null && measurementIndex !== "") {
                                    selectedMeasurement = (product.measurements && product.measurements[parseInt(measurementIndex)]) || null;
                                    if (selectedMeasurement) {
                                        priceToSend = selectedMeasurement.price || priceToSend;
                                        offerToSend = selectedMeasurement.offerPrice || offerToSend;
                                    }
                                }
                    
                                // If both color and measurement, use the last changed one for price
                                if (colorSelect && measurementSelect) {
                                    if (window._lastVariantChanged === 'color' && selectedColor) {
                                        priceToSend = selectedColor.price || priceToSend;
                                        offerToSend = selectedColor.offerPrice || offerToSend;
                                    } else if (window._lastVariantChanged === 'measurement' && selectedMeasurement) {
                                        priceToSend = selectedMeasurement.price || priceToSend;
                                        offerToSend = selectedMeasurement.offerPrice || offerToSend;
                                    }
                                }
                    
                                // Send to server
                                const response = await fetch('/add-to-cart', {
                                    method: 'PUT',
                                    headers: {
                                        'Content-Type': 'application/json',
                                        <% if (user && user.token) { %>
                                        'Authorization': 'Bearer <%= user.token %>'
                                        <% } %>
                                    },
                                    body: JSON.stringify({
                                        productId,
                                        colorIndex: colorIndex !== null && colorIndex !== "" ? parseInt(colorIndex) : null,
                                        measurementIndex: measurementIndex !== null && measurementIndex !== "" ? parseInt(measurementIndex) : null,
                                        quantity: parseInt(quantity),
                                        price: priceToSend,
                                        offerPrice: offerToSend > 0 ? offerToSend : null
                                    })
                                });
                    
                                const data = await response.json();
                    
                                if (addToCartBtn) {
                                    addToCartBtn.innerHTML = '<i class="fas fa-shopping-cart"></i> ADD TO CART';
                                    addToCartBtn.disabled = false;
                                }
                    
                                if (!response.ok) {
                                    throw new Error(data.message || 'Failed to add to cart');
                                }
                    
                                if (data.success) {
                                    this.showSuccess('Product added to cart!', feedbackEl);
                                    const itemCount = data.isGuest ? this.getGuestCart().length : (data.cart?.length || 0);
                                    this.updateCartCount(itemCount);
                    
                                    if (data.isGuest && data.cartItem) {
                                        this.addToGuestCart(data.cartItem);
                                    }
                                    return true;
                                } else {
                                    throw new Error(data.message || 'Failed to add to cart');
                                }
                            } catch (error) {
                                const addToCartBtn = document.getElementById('add-to-cart-btn');
                                const feedbackEl = document.getElementById('cart-feedback');
                                if (addToCartBtn) {
                                    addToCartBtn.innerHTML = '<i class="fas fa-shopping-cart"></i> ADD TO CART';
                                    addToCartBtn.disabled = false;
                                }
                                this.showError(error.message || 'Error adding to cart. Please try again.', feedbackEl);
                                return false;
                            }
                        },
                    
                        // Guest cart helpers
                        getGuestCart() {
                            try {
                                return JSON.parse(localStorage.getItem('guestCart') || '[]');
                            } catch (e) {
                                return [];
                            }
                        },
                    
                        addToGuestCart(item) {
                            const guestCart = this.getGuestCart();
                            const cartItemKey = this.generateCartItemKey(item);
                            item.cartItemKey = cartItemKey;
                    
                            const existingIndex = guestCart.findIndex(i => i.cartItemKey === cartItemKey);
                    
                            if (existingIndex >= 0) {
                                guestCart[existingIndex].quantity += item.quantity;
                            } else {
                                guestCart.push(item);
                            }
                    
                            localStorage.setItem('guestCart', JSON.stringify(guestCart));
                            this.updateCartCount(guestCart.length);
                        },
                    
                        generateCartItemKey(item) {
                            const color = item.selectedColor?.colorName || 'none';
                            const measurement = item.selectedMeasurement?.measurement || 'none';
                            return `${item.productId}-${color}-${measurement}`;
                        },
                    
                        updateCartCount(count) {
                            document.querySelectorAll('.cart-count').forEach(el => {
                                el.textContent = count;
                                el.style.display = count > 0 ? 'inline-block' : 'none';
                            });
                        },
                    
                        showSuccess(message, feedbackEl) {
                            if (feedbackEl) {
                                feedbackEl.textContent = message;
                                feedbackEl.style.display = "block";
                                feedbackEl.style.color = "#4CAF50";
                            }
                            // Only show Toastify if there's no feedback element or if it's empty
                            if ((!feedbackEl || !feedbackEl.textContent) && typeof Toastify === 'function') {
                                Toastify({
                                    text: message,
                                    duration: 3000,
                                    close: true,
                                    gravity: "top",
                                    position: "right",
                                    backgroundColor: "#4CAF50",
                                }).showToast();
                            }
                        },
                    
                        showError(message, feedbackEl) {
                            if (feedbackEl) {
                                feedbackEl.textContent = message;
                                feedbackEl.style.display = "block";
                                feedbackEl.style.color = "#f44336";
                            }
                            // Only show Toastify if there's no feedback element or if it's empty
                            if ((!feedbackEl || !feedbackEl.textContent) && typeof Toastify === 'function') {
                                Toastify({
                                    text: message,
                                    duration: 3000,
                                    close: true,
                                    gravity: "top",
                                    position: "right",
                                    backgroundColor: "#f44336",
                                }).showToast();
                            }
                        }
                    };
                    
                    // --- Quantity controls ---
                    document.addEventListener('DOMContentLoaded', function() {
                        const quantityInput = document.getElementById('product-quantity-input');
                        const decreaseBtn = document.getElementById('decrease-qty-btn');
                        const increaseBtn = document.getElementById('increase-qty-btn');
                        
                        decreaseBtn.addEventListener('click', function() {
                            let currentVal = parseInt(quantityInput.value);
                            if (currentVal > 1) {
                                quantityInput.value = currentVal - 1;
                            }
                        });
                        
                        increaseBtn.addEventListener('click', function() {
                            let currentVal = parseInt(quantityInput.value);
                            quantityInput.value = currentVal + 1;
                        });
                    
                        // Add to cart button handler
                        document.getElementById('add-to-cart-btn').addEventListener('click', function(e) {
                            e.preventDefault();
                    
                            const productId = this.getAttribute('data-product-id');
                            const quantity = parseInt(document.getElementById('product-quantity-input').value) || 1;
                    
                            let colorIndex = null;
                            let measurementIndex = null;
                    
                            const colorSelect = document.getElementById('color-variant-select');
                            if (colorSelect) {
                                colorIndex = colorSelect.value;
                            }
                    
                            const measurementSelect = document.getElementById('measurement-variant-select');
                            if (measurementSelect) {
                                measurementIndex = measurementSelect.value;
                            }
                    
                            cart.addItem(productId, colorIndex, measurementIndex, quantity);
                        });
                    
                        // Initialize cart count
                        <% if (typeof user !== "undefined" && user && typeof user.cartCount !== "undefined") { %>
                            cart.updateCartCount(<%= user.cartCount %>);
                        <% } else { %>
                            cart.updateCartCount(cart.getGuestCart().length);
                        <% } %>
                    });
                    </script>
            </div>
